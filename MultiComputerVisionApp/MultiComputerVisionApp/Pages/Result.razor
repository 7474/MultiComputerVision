<ContentPage @ref="contentPage">
    <StackLayout Margin="8">
        <Label Text="@Doc.GetTitle()"
               FontAttributes="Xamarin.Forms.FontAttributes.Bold"
               FontSize="30" />
        <StackLayout>
            <Grid>
                <Layout>
                    <ColumnDefinition GridUnitType="Xamarin.Forms.GridUnitType.Auto" />
                    <ColumnDefinition GridUnitType="Xamarin.Forms.GridUnitType.Absolute" Width="120" />
                    <ColumnDefinition GridUnitType="Xamarin.Forms.GridUnitType.Absolute" Width="120" />
                </Layout>
                <Contents>
                    <GridCell Column="1">
                        <Label Text="判定者" />
                    </GridCell>
                    <GridCell Column="2">
                        <Label Text="性的？" />
                    </GridCell>
                    <GridCell Column="3">
                        <Label Text="えっち？" />
                    </GridCell>
                </Contents>
            </Grid>
            @foreach (var result in Doc.Results)
            {
                <Grid>
                    <Layout>
                        <ColumnDefinition GridUnitType="Xamarin.Forms.GridUnitType.Auto" />
                        <ColumnDefinition GridUnitType="Xamarin.Forms.GridUnitType.Absolute" Width="120" />
                        <ColumnDefinition GridUnitType="Xamarin.Forms.GridUnitType.Absolute" Width="120" />
                    </Layout>
                    <Contents>
                        <GridCell Column="1">
                            <Label Text="@(result.Detector.GetNickName())" />
                        </GridCell>
                        <GridCell Column="2">
                            <Label Text="@((result.IsAdultContent ? "❌" : "✔") + "（" + Math.Round(result.AdultScore * 100) + "点）")" />
                        </GridCell>
                        <GridCell Column="3">
                            <Label Text="@((result.IsRacyContent ? "❌" : "✔") + "（" + Math.Round(result.RacyScore * 100) + "点）")" />
                        </GridCell>
                    </Contents>
                </Grid>
            }
        </StackLayout>
        <Label Text="Gさんは点数をつけてくれないようです。" />
        <Image Source="Doc.Image.Uri" />
    </StackLayout>
</ContentPage>

@code
{
    Microsoft.MobileBlazorBindings.Elements.ContentPage contentPage;
    [Parameter] public IResultDocument Doc { get; set; }
}
